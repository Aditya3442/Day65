class Solution {
    public long minimumSteps(String s) {
        int n=s.length();
        int bCount=0;
        long count=0;
        for(int j=0;j<n;j++){
            if(s.charAt(j)=='0'){
                count+=bCount;
            }
            else
                bCount++;
        }
        return count;
    }
}
