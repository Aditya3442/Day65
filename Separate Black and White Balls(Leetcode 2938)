class Solution {
    public long minimumSteps(String s) {
        StringBuilder sb=new StringBuilder(s);
        int n=s.length();
        int i=-1;
        long count=0;
        for(int j=0;j<n;j++){
            if(sb.charAt(j)=='0'){
                i++;
                count+=j-i;
            }
        }
        return count;
    }
}
